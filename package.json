{
  "name": "decky-auto-update",
  "version": "0.1.0",
  "description": "A Decky plugin to update the steam client on a scheduled basis",
  "scripts": {
    "build": "shx rm -rf dist && rollup -c",
    "watch": "rollup -c -w",
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy": "shx rm -rf dist && rollup -c && sh deploy.sh",
    "package": "shx rm -rf dist && rollup -c && sh package.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AkazaRenn/auto-update.git"
  },
  "keywords": [
    "decky",
    "plugin",
    "plugin-template",
    "steam-deck",
    "deck",
    "update"
  ],
  "author": "Renn Akaza <https://github.com/AkazaRenn>",
  "license": "GPL Version 2",
  "bugs": {
    "url": "https://github.com/AkazaRenn/auto-update/issues"
  },
  "homepage": "hhttps://github.com/AkazaRenn/auto-update#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/react": "16.14.0",
    "@types/webpack": "^5.28.0",
    "rollup": "^2.77.1",
    "rollup-plugin-import-assets": "^1.1.1",
    "shx": "^0.3.4",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "croner": "^8.0.2",
    "decky-frontend-lib": "^3.25.0",
    "google-protobuf": "^3.21.2",
    "protoc-gen-js": "^3.21.2",
    "react-icons": "^4.4.0",
    "ts-protoc-gen": "^0.15.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  }
}